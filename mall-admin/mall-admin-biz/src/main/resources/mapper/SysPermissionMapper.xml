<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mall.admin.biz.mapper.SysPermissionMapper">

    <!-- 公共字段 -->
    <sql id="permissionResult">
        sp.id, sp.name, sp.parent_id, sp.type, sp.url, sp.icon, sp.sort_order, sp.perms
    </sql>

    <select id="selectMenuList" resultType="com.mall.admin.api.entity.SysPermission">
        select
        distinct <include refid="permissionResult"/>
        from sys_permission sp
        <where>
            sp.type in (0, 1)
        </where>
    </select>

    <select id="selectPermissionList" resultType="com.mall.admin.api.entity.SysPermission">
        select
        <include refid="permissionResult"/>
        from sys_permission sp
    </select>

    <select id="selectPermissionListByType" resultType="com.mall.admin.api.entity.SysPermission">
        select
        distinct <include refid="permissionResult"/>
        from sys_permission sp
        <where>
            <if test="types != null and types.size() > 0">
                sp.type IN
                <foreach collection="types" item="type" open="(" separator="," close=")">
                    #{type}
                </foreach>
            </if>
        </where>
    </select>


    <select id="selectPermissionListByParentId" resultType="com.mall.admin.api.entity.SysPermission">
        select
        <include refid="permissionResult"/>
        from sys_permission sp
        <where>
            parent_id = #{parentId}
        </where>
    </select>

</mapper>