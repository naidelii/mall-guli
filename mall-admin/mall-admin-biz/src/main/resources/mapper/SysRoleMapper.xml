<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mall.admin.biz.mapper.SysRoleMapper">

    <!-- 公共字段 -->
    <sql id="roleResult">
        sr.id, sr.role_name, sr.role_code, sr.description
    </sql>

    <select id="selectRolesByUserId" resultType="com.mall.admin.api.entity.SysRole">
        select
            <include refid="roleResult"/>
        from sys_role sr
            join sys_user_role sur on sr.id = sur.role_id
            join sys_user su on sur.user_id = su.id
        <where>
            su.id = #{userId};
        </where>
    </select>
</mapper>